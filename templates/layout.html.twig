<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>
    {% block title %}
        {% if subtitle is defined %}{{ subtitle }} - {% endif %}
        {% if subtitle is defined %}{{ title }} - {% endif %}
        Les Initi√©s
    {% endblock %}
    </title>

    {# STYLES #}
    <link rel="stylesheet" href="{{ asset('resources/build/style/css/style.css') }}">
    {% block css %}{% endblock %}

    {# FAVICON #}
    <link rel="icon" type="image/png" href="{{ asset('resources/images/favicon.png') }}?v=1" />

    {# FONTS #}
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Manuale:400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,300i,700" rel="stylesheet">
  </head>
  <body>
    {{ include('includes/menu.html.twig') }}

    <header>
      {% block header %}
        {% if header_bg is defined %}
          <div
            class="header"
            style="background-image:
              linear-gradient(to right, black, rgba(0, 0, 0, 0) 40%, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 60%, black),
              linear-gradient(to bottom, black, rgba(0, 0, 0, 0) 30%, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 70%, black),
              url({{ header_bg }})
              ;"
          >
            <div class="header-content-wrapper">
              <h2>{{ subtitle|default('') }}</h2>
              <h1>{{ title|default('') }}</h1>
            </div>
          </div>
        {% endif %}
      {% endblock %}
    </header>

    <main class="main main-{{ domain|default('default') }}">
      <div class="breadcrumb-wrapper">
        {% block breadcrumb %}{% endblock %}
      </div>
      <div class="container">
        {% block container %}{% endblock %}
      </div>
    </main>

    {# MODALS #}
    {{ render_rule_modals()|raw }}

    {# SCRIPTS #}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
    <script src="{{ asset('resources/script/jquery-3.2.1.min.js') }}"></script>
    <script src="{{ asset('resources/script/popper.min.js') }}"></script>
    <script src="{{ asset('resources/script/bootstrap.min.js') }}"></script>
    <script src="{{ asset('resources/script/jquery.sticky.js') }}"></script>
    <script src="{{ asset('resources/script/script.js') }}"></script>
    <script src="{{ asset('resources/build/app.js') }}"></script>
    {% block js %}{% endblock %}
</body>
</html>