<section class="block" >
  <a class="anchor" id="{{ slug }}"></a>

  <div
    class="block-background"
    style="background-image:
      linear-gradient(
        to bottom,
        rgba(0, 0, 0, 0.85),
        rgba(0, 0, 0, 0) 200px,
        rgba(0, 0, 0, 0),
        rgba(0, 0, 0, 0) 400px,
        rgba(0, 0, 0, 1)
      ),
      linear-gradient(
        to left,
        rgba(0, 0, 0, 0.60),
        rgba(0, 0, 0, 0) 200px,
        rgba(0, 0, 0, 0)
      ),
      url({{ bg }})
     "
  >
  </div>

  <div class="block-title">
    <div>
        {% if icon is defined %}<img src="{{ icon }}">{% endif %}
      <h1>{{ title }}</h1>
    </div>
    <span>{{ subtitle }}</span>
  </div>

  {% if increases is defined %}
  <ul class="block-nav">
    <div class="line"></div>
    <li data-target="{{ slug }}-0" class="active">
      <div class="bullets">
        <div class="bullet-active"></div>
        <div class="bullet-default"></div>
      </div>
      <span>0</span>
    </li>
    {% for increase in increases %}
      <li data-target="{{ slug ~ '-' ~ loop.index }}">
        <div class="bullets">
          <div class="bullet-active"></div>
          <div class="bullet-default"></div>
        </div>
        <span>{{ loop.index|roman }}</span>
      </li>
    {% endfor %}
  </ul>
  {% endif %}

  <div class="block-content">
    <div id="{{ slug }}-0">{{ description|augment|raw }}</div>
    {% if increases is defined %}
      {% for increase in increases %}
        <div id="{{ slug ~ '-' ~ loop.index }}" class="block-content-increase">{{ increase.description|augment|raw }}</div>
      {% endfor %}
    {% endif %}

    {% if need is defined and need is not empty %}
      <div class="need">
        <span>NÃ©cessite :</span> {{ need }}
      </div>
    {% endif %}
  </div>
</section>