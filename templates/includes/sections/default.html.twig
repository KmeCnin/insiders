<section class="block" style="background-image: 
linear-gradient(to bottom, rgba(0, 0, 0, 0.95), rgba(0, 0, 0, 0) 200px, rgba(0, 0, 0, 0)),
url({{ bg }})">
  <a class="anchor" id="{{ slug }}"></a>

  <div class="block-title">
    <div>
      {% if icon is defined %}<img src="{{ icon }}">{% endif %}
      <h1>{{ title }}</h1>
    </div>
    <span>{{ subtitle }}</span>
  </div>

  <div class="block-content">
    <p>{{ description|augment|raw }}</p>
    {% if need is defined and need is not empty %}
      <div class="need">
        <span>NÃ©cessite :</span> {{ need }}
      </div>
    {% endif %}
  </div>
</section>