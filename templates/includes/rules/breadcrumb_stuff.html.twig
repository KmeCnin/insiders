<div class="breadcrumb">
  <div class="line"></div>
  <div class="breadcrumb-items">
    {# INDEX #}
    <a href="{{ path('rules.all_stuff') }}" {% if category is not defined %}class="active"{% endif %}>
      <img src="{{ asset('resources/images/categories/icons/category.svg') }}" alt="Tous les Ã©quipements">
      <span>Index</span>
      <div class="bullets">
        <div class="bullet-default"></div>
        <div class="bullet-active"></div>
      </div>
    </a>
    {% for abilityBreadcrumb in categories %}
    <a href="{{ path('rules.stuff', {'slug': abilityBreadcrumb.slug}) }}" {% if ability is defined and ability == abilityBreadcrumb %}class="active"{% endif %}>
      <img src="{{ asset('resources/images/stuff/icons/'~abilityBreadcrumb.id~'.svg') }}" alt="{{ abilityBreadcrumb.name }}">
      <span>
        {% if abilityBreadcrumb.id == 'fight' %}
        Combat
        {% elseif abilityBreadcrumb.id == 'utilitarian' %}
        Aventure
        {% elseif abilityBreadcrumb.id == 'expendables' %}
        Conso
        {% endif  %}
      </span>
      <div class="bullets">
        <div class="bullet-active"></div>
        <div class="bullet-default"></div>
      </div>
    </a>
    {% endfor %}
  </div>
</div>