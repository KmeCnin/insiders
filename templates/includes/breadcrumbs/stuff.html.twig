<div class="breadcrumb">
  <div class="line"></div>
  <div class="breadcrumb-items">
    {# INDEX #}
    <a href="{{ path('rules.all_stuff') }}" {% if category is not defined %}class="active"{% endif %}>
      <img src="{{ asset('resources/images/stuff_categories/icons/category.svg') }}" alt="Tous les Ã©quipements">
      <span>Index</span>
      <div class="bullets">
        <div class="bullet-default"></div>
        <div class="bullet-active"></div>
      </div>
    </a>
    {% for categoryBreadcrumb in categories %}
    <a href="{{ path('rules.stuff', {'slug': categoryBreadcrumb.slug}) }}" {% if category is defined and category == categoryBreadcrumb %}class="active"{% endif %}>
      <img src="{{ asset('resources/images/stuff_categories/icons/'~categoryBreadcrumb.id~'.svg') }}" alt="{{ categoryBreadcrumb.name }}">
      <span>
        {% if categoryBreadcrumb.id == 'fight' %}
        Combat
        {% elseif categoryBreadcrumb.id == 'utilitarian' %}
        Aventure
        {% elseif categoryBreadcrumb.id == 'expendables' %}
        Conso
        {% endif  %}
      </span>
      <div class="bullets">
        <div class="bullet-active"></div>
        <div class="bullet-default"></div>
      </div>
    </a>
    {% endfor %}
  </div>
</div>