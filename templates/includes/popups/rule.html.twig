<div id="{{ modalId }}" class="modal">
    {% if rule.code != 'lexicon' %}
        {% set bg = asset('resources/images/'~rule.code~'/'~rule.id~'.jpg') %}
    {% else %}
        {% set bg = asset('resources/images/bg-header-tools.jpg') %}
    {% endif %}
    <div
        class="modal-dialog"
        role="document"
        style="background: url({{ bg }}) no-repeat;"
    >
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">{{ rule.name }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>{{ rule.description|augment_in_modal|raw }}</p>
            </div>
        </div>
    </div>
</div>