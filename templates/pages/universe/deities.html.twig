{% extends 'layout-universe.html.twig' %}

{# /universe/divinités #}
{# @var deities \App\Entity\Rule\Deity #}

{% set header_bg = asset('resources/images/bg-header-deities.jpg') %}
{% set subtitle = 'Divinités' %}

{% block container %}
  <div class="block block-intro">
    <p>{{ description|raw }}</p>
  </div>

  <section>
    {% for deity in deities %}
      <div class="block-split-wrapper">
        <div class="block-title">
          <div>
            <img src="{{ asset('resources/images/arcanes/icons/'~deity.arcane.id~'.svg') }}" alt="{{ deity.arcane.name }}">
            <h1>{{ deity.name }}</h1>
          </div>
          <span>{{ deity.dignity }}</span>
        </div>
        <div class="block block-split">
          <div class="block-content">
            <p>{{ deity.description|raw }}</p>
          </div>
          <div class="bg-block" style="background-image: url({{ asset('resources/images/deities/'~deity.id~'.jpg') }})"></div>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock %}
