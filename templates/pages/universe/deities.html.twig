{% extends 'layout-universe.html.twig' %}

{# /universe/divinités #}
{# @var deities \App\Entity\Rule\Deity #}

{% set header_bg = asset('resources/images/bg-header-deity.jpg') %}
{% set title = 'Divinités' %}

{% block container %}
  <div class="block-intro">
    <p>{{ description|raw }}</p>
  </div>

  {% for deity in deities %}
    {% include 'includes/sections/deity.html.twig' with {
      'title': deity.name,
      'subtitle': deity.dignity,
      'description': deity.description,
      'slug': deity.slug,
      'rule': deity,
      'icon': asset('resources/images/arcane/icons/'~deity.arcane.id~'.svg'),
      'bg': asset('resources/images/deity/'~deity.id~'.jpg'),
    } only %}
  {% endfor %}
{% endblock %}
