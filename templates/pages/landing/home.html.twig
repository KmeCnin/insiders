{% extends 'layout.html.twig' %}

{% set title = 'Accueil' %}
{% set subtitle = 'Bienvenue' %}

{% block header %}
  <div class="header" style="background-image: url({{ asset('resources/images/home/home-header-bg.jpg') }});">
    <div class="header-content-wrapper">
      <img src="{{ asset('resources/images/logo.png') }}" alt="Logo Les Initiés">
      <h1>Rejoignez Les Initiés</h1>
      <h2>Vivez l'aventure</h2>
    </div>
  </div>
{% endblock %}

{% block container %} 
  <h1>Le jeu de rôle</h1>

  <section class="section-horizontal">
    <div class="block block-home1">
      <div class="block-short">
        <img src="{{ asset('resources/images/home/home-short-picto1.svg') }}" alt="Fire">
        <p>Incarnez le personnage de vos rêves</p>
      </div>
    </div>

    <div class="block block-home2">
      <div class="block-short">
        <img src="{{ asset('resources/images/home/home-short-picto1.svg') }}" alt="Fire">
        <p>Concentrez-vous sur le role play et non sur les règles</p>
      </div>
    </div>

    <div class="block block-home3">
      <div class="block-short">
        <img src="{{ asset('resources/images/home/home-short-picto1.svg') }}" alt="Fire">
        <p>Découvrez un univers fantastique surprenant</p>
      </div>
    </div>
  </section>
{% endblock %}