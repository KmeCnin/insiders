{% extends 'layout-rules.html.twig' %}

{# /règles/équipements #}
{# @var category \App\Entity\Rule\StuffCategory #}
{# @var categories \App\Entity\Rule\StuffCategory[] #}
{# @var stuff \App\Entity\Rule\CanonicalStuff[] #}

{% set header_bg = asset('resources/images/stuff_categories/'~category.id~'.jpg') %}
{% set subtitle = category.name %}

{% block container %}
  {{ include('includes/breadcrumbs/stuff.html.twig', [categories, category]) }}

  <div class="block block-intro">
    <p>{{ description|augment|raw }}</p>
  </div>

  <section>
    {% for stuffItem in stuff %}
      <div class="block" style="background-image: 
      linear-gradient(to bottom, black, rgba(0, 0, 0, 0), black),
      url({{ asset('resources/images/stuff/'~stuffItem.id~'.jpg') }})">
        <a class="anchor" id="{{ stuffItem.slug }}"></a>
        <div class="block-title">
          <div>
            <h1>{{ stuffItem.name }}</h1>
          </div>
          <span>{{ stuffItem.short }}</span>
        </div>

        <div class="block-content">
          <p>{{ stuffItem.description|augment|raw }}</p>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock %}
