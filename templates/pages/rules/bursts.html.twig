{% extends 'layout-rules.html.twig' %}

{# /règles/décharges-d'arcanite #}
{# @var bursts \App\Entity\Rule\Burst #}

{% set header_bg = asset('resources/images/bg-header-bursts.jpg') %}
{% set subtitle = 'Décharges d\'arcanite' %}

{% block container %}
  <div class="block block-intro">
    <p>{{ description|raw }}</p>
  </div>

  <section>
    {% for burst in bursts %}
      <div class="block" style="background-image: 
      linear-gradient(to bottom, rgba(0,0,0,0.8) 1%, rgba(0,0,0,0), rgba(0,0,0,0), rgba(0,0,0,1)),
      url({{ asset('resources/images/bursts/'~burst.id~'.jpg') }})">
        <div class="block-title">
          <div>
            <h1>{{ burst.name }}</h1>
          </div>
          <span>{{ burst.short }}</span>
        </div>

        <div class="block-content">
          <p>{{ burst.description|raw }}</p>
        </div>
      </div>
    {% endfor %}
  </section>
{% endblock %}
