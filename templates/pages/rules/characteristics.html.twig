{% extends 'layout-rules.html.twig' %}

{# /règles/caractéristiques #}
{# @var characteristics \App\Entity\Rule\Characteristic #}

{% set header_bg = asset('resources/images/bg-header-characteristics.jpg') %}
{% set subtitle = 'Caractéristiques' %}


{% block container %}
  <div class="block block-intro">
    <p>{{ description|augment|raw }}</p>
  </div>

  {% for characteristic in characteristics %}
    {% include 'includes/sections/default.html.twig' with {
      'title': characteristic.name,
      'subtitle': characteristic.short,
      'description': characteristic.description,
      'slug': characteristic.slug,
      'bg': asset('resources/images/characteristics/'~characteristic.id~'.jpg'),
    } only %}
  {% endfor %}
{% endblock %}
